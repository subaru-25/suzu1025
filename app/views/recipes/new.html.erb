<!-- app/views/recipes/new.html.erb -->
<h1>新しいレシピを作成</h1>

<%= form_with model: @recipe, local: true do |form| %>
  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "説明" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "作成" %>
  </div>
<% end %>
